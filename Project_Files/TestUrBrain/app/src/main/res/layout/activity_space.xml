<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SpaceActivity">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Question "
        android:textAlignment="center"
        android:textColor="#FB1616"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNumber"
        android:layout_alignEnd="@+id/tvNumber"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="0dp"
        android:text="Question Text What are you doingsbjsbnsnhdjd"
        android:textAlignment="viewStart"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/answersgrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNumber"
        android:layout_alignStart="@+id/tvNumber"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/tvNumber"
        >
        <!--android:layout-->
        <!--android:checkedButton="@+id/radioButton"-->


        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/rb1"
            android:checked="false"
            android:textSize="18sp"
            android:buttonTint="#F65826"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/rb2"
            android:checked="false"
            android:buttonTint="#F65826"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="10sp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/rb3"
            android:buttonTint="#F65826"
            android:textColor="#FFFFFF"
            android:checked="false"
            android:textSize="18sp"
            android:layout_marginTop="10sp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/rb4"
            android:buttonTint="#F65826"
            android:textColor="#FFFFFF"
            android:checked="false"
            android:textSize="18sp"
            android:layout_marginTop="10sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/answersgrp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="218dp"
        android:layout_marginRight="30sp"
        android:background="@drawable/round_bg"
        android:elevation="8dp"
        android:text="Next Question"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30sp"
        android:background="@drawable/round_bg"
        android:elevation="8dp"
        android:text="Quit"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuit"
        android:layout_marginTop="23dp"
        android:layout_alignStart="@+id/tvNumber"
        android:layout_alignEnd="@id/tvNumber"
        android:text="Score: "
        android:textAlignment="center"
        android:textColor="#05FB0F"
        android:textSize="20sp" />


</RelativeLayout>