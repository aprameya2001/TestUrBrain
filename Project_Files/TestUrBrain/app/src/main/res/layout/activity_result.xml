<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="cursive"
        android:text="Congrats!!!"
        android:textAlignment="center"
        android:textColor="#FB1616"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:text="You have successfully completed a quiz!"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="10sp"
        android:background="#211323">

        <ImageView
            android:id="@+id/ivBadge"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/quiz_time"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/tvCompliment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Compliment"
            android:textAlignment="center"
            android:textSize="19sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A9A9A9"
            android:text="You have earned 0 stars!"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tvMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="Your Score:"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:background="#79000000"
        android:padding="10sp"/>

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/round_bg"
        android:text="Take another Quiz"
        android:textColor="@color/colorText"
        android:elevation="8dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/round_bg"
        android:text="Getting Bored? Play A Game"
        android:textColor="@color/colorText"
        android:elevation="8dp"
        android:textSize="18sp" />


</LinearLayout>