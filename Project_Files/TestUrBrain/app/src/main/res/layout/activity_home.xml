<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10sp"
                android:background="#211323">

                <ImageView
                    android:id="@+id/ivQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/quiz_time"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="Ready for a Quiz?"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:text="Dive into our special collection of quizzes!"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_marginBottom="10sp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="#211323">

                <ImageView
                    android:id="@+id/ivGame"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/game_time"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="Ready for a game?"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:text="Check out our collection of brain games!"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="#211323">

                <ImageView
                    android:id="@+id/ivAbout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/game_time"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="About us"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:text="Learn more about this app!"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>